{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "enniLocationRequest",
    "id": "enniLocationRequest",
    "description": "The location of the ENNI.",
    "type": "object",
    "required": [
        "objectType",
        "enniLocationAddressType",
        "enniLocationAddress"
    ],
    "properties": {
        "objectType": {
            "type": "string",
            "enum": [
                "enniLocationRequest"
            ],
            "description": "The type of the object, enniLocationRequest."
        },
        "locationName": {
            "type": "string",
            "description": "Name of Data Center or Colocation Facility where NNI is established (i.e., A Location).",
            "maxLength": 60,
            "title": "ENNI Location Name"
        },
        "enniLocationAddressType": {
            "type": "string",
            "enum": [
                "FIELDED_ADDRESS",
                "FORMATTED_ADDRESS",
                "ADDRESS_REFERENCE",
                "GEOGRAPHIC_POINT"
            ],
            "description": "Identifies the type of address to be provided for the service location.",
            "title": "ENNI Location Address Type"
        },
        "enniLocationAddress": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "formattedAddress.json#"
                },
                {
                    "$ref": "fieldedAddress.json#"
                },
                {
                    "$ref": "geographicPoint.json#"
                },
                {
                    "$ref": "addressReference.json#"
                }
            ],
            "description": "A site address of the site address type.",
            "title": "ENNI Location Address"
        }
    }
}
