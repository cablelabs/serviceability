{
  "/serviceability-responses/{id}/accept/{term}": {
    "post": {
      "tags": [
        "Serviceability"
      ],
      "summary": "Accepts a serviceability response/pricing term.",
      "description": "This service accepts pricing term for a serviceability response.",
      "consumes": [
        "application/json",
        "application/xml"
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "ID of instance that needs to be fetched.",
          "required": true,
          "type": "string"
        },
        {
          "in": "path",
          "name": "term",
          "description": "The term to be selected.",
          "required": true,
          "type": "string"
        }
      ],
      "responses": {
        "204": {
          "description": "OK (successful operation)."
        },
        "400": {
          "description": "Invalid ID supplied."
        },
        "404": {
          "description": "Instance not found."
        }
      }
    }
  }
}
