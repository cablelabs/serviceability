{
  "/serviceability-requests/{id}/submit": {
    "post": {
      "tags": [
        "Serviceability"
      ],
      "summary": "Submit a Serviceability Request.",
      "description": "Submits a serviceability request. This causes serviceability requests to be created and sent.",
      "consumes": [
        "application/json",
        "application/xml"
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "ID of instance that needs to be fetched.",
          "required": true,
          "type": "string"
        }
      ],
      "responses": {
        "200": {
          "description": "OK (successful operation)."
        },
        "400": {
          "description": "Invalid ID supplied."
        },
        "404": {
          "description": "Instance not found."
        }
      }
    }
  }
}
